<!DOCTYPE html>
{% extends "bootstatmenu.jinja2" %}
{% block body %}
      <h1>The list view points here! home.html</h1>
    {% for entry in entries %}
        <article>
            <h2><a href=/journal/{{entry.id}}>{{ entry.title }}</a></h2>
            <hr />
            <p>Created <strong>{{ entry.date }}</strong></p>
            <hr />
            <p>{{ entry.body  | safe }}</p>
        </article>
    {% endfor %}
    <h2><a href='/journal/new-entry'>New Entry</a></h2>
    </body>
</html>
{% endblock %}
