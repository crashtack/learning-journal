<!DOCTYPE html>
{% extends "bootstatmenu.jinja2" %}
{% block body %}

    <div class="jumbotron">
      <h2>The list view points here! home.html</h2>
      {% for entry in entries %}
          <article>
              <h3><a href=/journal/{{entry.id}}>{{ entry.title }}</a></h3>
              <hr />
              <p>Created <strong>{{ entry.date }}</strong></p>
              <hr />
              <p>{{ entry.body  | safe }}</p>
          </article>
      {% endfor %}
    </dir>

    <h2><a href='/journal/new-entry'>New Entry</a></h2>

{% endblock %}
